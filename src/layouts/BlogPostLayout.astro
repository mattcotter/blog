---
// src/layouts/BlogPostLayout.astro
import NavLayout from './NavLayout.astro';
const {frontmatter} = Astro.props
---

<NavLayout pageTitle={frontmatter.title}>
  <article class="prose lg:prose-xl">
    <div class="text-lg md:text-xl  bg-white mt-5 pt-5 pl-10 pr-10 pb-5 rounded-4xl text-black box-shadow">
      <h1>{frontmatter.title}</h1>
      <div class="text-sm text-gray-400">
        <span>By {frontmatter.author}</span> Â· <time datetime={frontmatter.pubDate}>{new Date(frontmatter.pubDate).toLocaleDateString()}</time>
      </div>
    </div>
    <div class="p-10">
      <slot />
    </div>
  </article>
</NavLayout>